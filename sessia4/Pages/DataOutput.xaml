<Page x:Class="sessia4.Pages.DataOutput"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:sessia4.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="DataOutput">

    <Grid>
        <ListView x:Name="listProducts">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <WrapPanel>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="250"/>
                                <ColumnDefinition Width="250"/>
                                <ColumnDefinition Width="200"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="{Binding name}" FontWeight="Bold"/>
                            <StackPanel Grid.Column="1">
                                <TextBlock>
                                    <Run Text="Тип: "/>
                                    <Run Text="{Binding type_products.type_prod}"/>
                                </TextBlock>
                                <TextBlock>
                                    <Run Text="Артикул: "/>
                                    <Run Text="{Binding articul}"/>
                                </TextBlock>
                                <TextBlock>
                                    <Run Text="Количество человек на производстве: "/>
                                    <Run Text="{Binding count_people_proizv}"/>
                                </TextBlock>
                                <TextBlock>
                                    <Run Text="Номер цеха:"/>
                                    <Run Text="{Binding number_ceh}"/>
                                </TextBlock>
                            </StackPanel>
                            <StackPanel Grid.Column="2">
                                <TextBlock>
                                    <Run Text="Минимальная стоимость:"/>
                                    <Run Text="{Binding min_cost}"/>
                                </TextBlock>
                            </StackPanel>
                        </Grid>
                    </WrapPanel>
                </DataTemplate>
            </ListView.ItemTemplate>    
        </ListView>    
    </Grid>
</Page>
